@model WebApplication11.Models.Employee




<section>
    <h1>Add Employee</h1>
    @using (Html.BeginForm("Add", "Employee", FormMethod.Post))
    {

       // @Html.ValidationSummary()

        <div>
            @Html.DisplayNameFor(x => x.Name)
